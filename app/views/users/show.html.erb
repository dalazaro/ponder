<% is_owner = current_user.id == @user.id %>
<div class="row container">
  <!-- Sidebar -->
  <div class="col l4 user-profile">
    <div>
      <%= image_tag "https://avatars1.githubusercontent.com/u/27825269?v=4&s=460", class: "responsive-img profile-img" %>
    </div>

    <div class="col profile-info">
      <h3 class="fullname"><%= "#{@user.first_name} #{@user.last_name}" %></h3>

      <h4 class="username grey-text text-darken-1"><%= @user.username %></h4>

      <div class="bio grey-text text-darken-1">
        <p><i><%= @user.bio %></i></p>
      </div>

      <% if is_owner %>
        <div>
          <a class="btn" href=<%= edit_user_path %>>Edit Profile</a>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Posts Section -->
  <div class="col l8 post-section">
    <div class="row">
      <div class="col l6">
        <h2 class="post-title">Posts</h2>
      </div>
      <% if is_owner %>
        <div class="col l6 new-post-button">
          <%= button_to "New Post", new_post_path, method: :get, class: "btn right" %>
        </div>
      <% end %>
    </div>
    <div class="posts">
      <% @posts.each do |post| %>
        <h4><%= link_to "#{post.title}", post_path(post.id) %></h4>
        <p><%= post.content %></p>
      <% end %>
    </div>
  </div>
</div>
