<%= form_for @user do |f| %>
  <div>
    <label>First name</label>
    <%= f.text_field :first_name %>
  </div>
  <div>
    <label>Last name</label>
    <%= f.text_field :last_name %>
  </div>
  <div>
    <label>Bio</label>
    <%= f.text_area :bio %>
  </div>
  <div>
    <label>E-mail address</label>
    <%= f.email_field :email %>
  </div>
  <%= f.submit "Save" %>
<% end %>
