<%= form_for @post do |f| %>
  <div>
    <label>Title</label>
    <%= f.text_field :title, placeholder: "Enter your title here...", class: "post-title" %>
  </div>

  <div>
    <label>Content</label>
    <%= f.text_area :content, class: "materialize-textarea post-content text-box", placeholder: "Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat." %>
  </div>

  <div>
    <%= f.submit "Submit", class: "waves-effect waves-light btn" %>
  </div>
<% end %>
